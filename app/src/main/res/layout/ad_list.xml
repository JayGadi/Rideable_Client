<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111">

    <TextView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimary"
        android:text="MAP"
        android:textSize="50dp"
        android:textAlignment="center"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_calendar"
        android:id="@+id/ic_calendar"
        android:layout_below="@+id/mapview"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mapview"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_toRightOf="@+id/ic_calendar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColorPrimary"
        android:text="TEST DATE"/>

    <TextView
        android:id="@+id/departure_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_calendar"
        android:textColor="@color/textColorPrimary"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/arrival_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/departure_city"
        android:textColor="@color/textColorPrimary"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/departure_city"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date"
        android:layout_marginRight="15dp"
        android:textColor="@color/textColorPrimary"/>



</RelativeLayout>